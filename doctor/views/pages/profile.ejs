<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Profile - MindWell</title>
  <style>
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: Arial, sans-serif;
      background: linear-gradient(135deg, #e6f2fb, #ffffff);
      color: #333;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    header {
      background-color: #3c8dbc;
      color: white;
      padding: 30px;
      text-align: center;
      border-bottom: 5px solid #5faee3;
    }

    nav {
      background-color: #5faee3;
      padding: 15px;
      text-align: center;
    }

    nav a {
      margin: 0 20px;
      text-decoration: none;
      color: white;
      font-weight: bold;
      font-size: 18px;
    }

    nav a:hover {
      color: #e6f2fb;
    }

    .container {
      padding: 30px;
      text-align: center;
      flex-grow: 1;
    }

    .profile-box {
      background-color: rgba(255, 255, 255, 0.95);
      border: 2px solid #3c8dbc;
      padding: 30px;
      margin: 20px auto;
      border-radius: 10px;
      width: 60%;
      text-align: left;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.05);
    }

    .profile-box h3 {
      margin-bottom: 20px;
      color: #3c8dbc;
      text-align: center;
    }

    .profile-box p {
      margin: 10px 0;
      color: #444;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .profile-box label {
      color: #3c8dbc;
      font-weight: bold;
      margin-right: 10px;
    }

    .profile-box button {
      background-color: #3c8dbc;
      color: white;
      border: none;
      padding: 8px 16px;
      font-size: 14px;
      cursor: pointer;
      border-radius: 8px;
      transition: background-color 0.3s;
      margin-left: 15px;
    }

    .profile-box button:hover {
      background-color: #5faee3;
    }

    .clinic-name {
      font-size: 40px;
      font-weight: bold;
      color: white;
      margin-bottom: 20px;
      text-transform: uppercase;
    }

    .edit-form {
      display: none;
      margin-top: 30px;
      text-align: left;
    }

    .edit-form label {
      font-weight: bold;
      color: #3c8dbc;
    }

    .edit-form input {
      padding: 10px;
      width: 100%;
      margin: 10px 0;
      border-radius: 6px;
      border: 1px solid #cbddee;
      font-size: 14px;
    }

    .edit-form button {
      background-color: #3c8dbc;
      color: white;
      border: none;
      padding: 8px 16px;
      font-size: 14px;
      margin-right: 10px;
      border-radius: 6px;
      cursor: pointer;
    }

    .edit-form button:hover {
      background-color: #5faee3;
    }
  </style>
</head>
<body>
  <header>
    <div class="clinic-name">Healing Minds Clinic</div>
  </header>

  <nav>
    <a href="/home">Home</a>
    <a href="/login">Logout</a>
  </nav>

  <div class="container">
    <div class="profile-box">
      <h3>Your Profile</h3>

      <div id="name">
        <p><label>Full Name:</label> John Doe <button onclick="editInfo('name')">Change</button></p>
      </div>

      <div id="username">
        <p><label>Username:</label> johndoe123 <button onclick="editInfo('username')">Change</button></p>
      </div>

      <div id="telephone">
        <p><label>Telephone:</label> +1234567890 <button onclick="editInfo('telephone')">Change</button></p>
      </div>

      <!-- Edit Form -->
      <div class="edit-form" id="edit-form">
        <form id="editForm" onsubmit="return confirmChange(event)">
          <label for="new-value">New Value:</label>
          <input type="text" id="new-value" name="new-value" required />
          <button type="submit">OK</button>
          <button type="button" onclick="cancelEdit()">Cancel</button>
        </form>
      </div>
    </div>
  </div>

  <script>
    let currentField = '';

    function editInfo(field) {
      currentField = field;
      const value = document.querySelector(`#${field} p`).textContent.split(":")[1].trim();
      document.getElementById('new-value').value = value;
      document.getElementById('edit-form').style.display = 'block';
    }

    function cancelEdit() {
      document.getElementById('edit-form').style.display = 'none';
    }

    function confirmChange(event) {
      event.preventDefault();
      const newValue = document.getElementById('new-value').value;
      const confirmation = confirm(`Are you sure you want to change your ${currentField} to ${newValue}?`);
      if (confirmation) {
        document.querySelector(`#${currentField} p`).textContent = `${capitalizeFirstLetter(currentField)}: ${newValue}`;
        document.getElementById('edit-form').style.display = 'none';
        alert(`${currentField} has been updated to: ${newValue}`);
      }
    }

    function capitalizeFirstLetter(str) {
      return str.charAt(0).toUpperCase() + str.slice(1);
    }
  </script>
</body>
</html>
