  <title>Book an Appointment – MindWell</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      background-color: #e6f2fb;
      padding: 20px;
      color: #333;
    }

    h1 {
      font-size: 32px;
      color: #3c8dbc;
      margin-bottom: 10px;
    }

    .home-btn {
      background-color: #3c8dbc;
      color: white;
      padding: 10px 20px;
      text-decoration: none;
      font-weight: bold;
      border-radius: 8px;
      display: inline-block;
      font-size: 18px;
      position: absolute;
      left: 20px;
    }

    .home-btn:hover {
      background-color: #5faee3;
    }

    .container {
      background: white;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.05);
      display: inline-block;
      text-align: center;
      width: 90%;
      max-width: 500px;
    }

    label {
      font-size: 20px;
      font-weight: bold;
      display: block;
      margin: 15px 0 10px;
      color: #3c8dbc;
    }

    select, input, button {
      padding: 12px;
      font-size: 18px;
      margin: 10px 0;
      width: 90%;
      border-radius: 8px;
      text-align: center;
    }

    select, input {
      border: 2px solid #cbddee;
    }

    button {
      background-color: #3c8dbc;
      color: white;
      cursor: pointer;
      border: none;
      font-weight: bold;
    }

    button:hover {
      background-color: #5faee3;
    }

    .time-slots {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      margin-top: 15px;
    }

    .time-slot {
      padding: 15px 20px;
      background: #c9e4f9;
      margin: 8px;
      cursor: pointer;
      border-radius: 8px;
      color: #3c8dbc;
      transition: 0.3s;
      font-weight: bold;
      font-size: 18px;
    }

    .time-slot:hover,
    .selected {
      background: #3c8dbc;
      color: white;
    }

    #confirmationMessage {
      font-weight: bold;
      font-size: 18px;
      color: #2c3e50;
      margin-top: 20px;
    }
  </style>
</head>
<body>

  <h1>Book an Appointment</h1>
  <a href="/home" class="home-btn">← Return Home</a>

  <br><br>

  <div class="container">
    <form action="/book_doctor" method="get">
      <label for="appointmentDoctor">Select a Doctor:</label>
      <select name="appointmentDoctor" id="appointmentDoctor">
          <option value="null" disabled selected></option>
        <% for(let i = 0; i < doctors.length; i++) { %>
          <option value="<%= doctors[i]['id'] %>"><%= doctors[i]['full_name'] %> <%= doctors[i]['speciality'] %></option>
        <% } %>
      </select>

      <label for="appointmentDate">Select a Date:</label>
      <input type="date" id="appointmentDate" name="appointmentDate" required
             min="<%= new Date(Date.now() - (new Date().getTimezoneOffset() * 60000)).toISOString().split('T')[0]%>">

      <label>Select a Time Slot:</label>
      <div class="time-slots" id="timeSlots"></div>
         <div id="errorMessage"></div>

      <!-- Hidden input to capture selected time -->
      <input type="hidden" name="selectedTime" id="selectedTimeInput" required>

      <button type="submit" onclick="return validateForm()">Book Now</button>
    </form>
  </div>

  <p id="confirmationMessage"></p>
  <input hidden value="<%= schedules %>" id="schedules">



