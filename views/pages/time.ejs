<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Book an Appointment – MindWell</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      background-color: #e6f2fb;
      padding: 20px;
      color: #333;
    }

    h1 {
      font-size: 32px;
      color: #3c8dbc;
      margin-bottom: 10px;
    }

    .home-btn {
      background-color: #3c8dbc;
      color: white;
      padding: 10px 20px;
      text-decoration: none;
      font-weight: bold;
      border-radius: 8px;
      display: inline-block;
      font-size: 18px;
      position: absolute;
      left: 20px;
    }

    .home-btn:hover {
      background-color: #5faee3;
    }

    .container {
      background: white;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.05);
      display: inline-block;
      text-align: center;
      width: 90%;
      max-width: 500px;
    }

    label {
      font-size: 20px;
      font-weight: bold;
      display: block;
      margin: 15px 0 10px;
      color: #3c8dbc;
    }

    input, button {
      padding: 12px;
      font-size: 18px;
      margin: 10px 0;
      width: 90%;
      border-radius: 8px;
      text-align: center;
    }

    input {
      border: 2px solid #cbddee;
    }

    button {
      background-color: #3c8dbc;
      color: white;
      cursor: pointer;
      border: none;
      font-weight: bold;
    }

    button:hover {
      background-color: #5faee3;
    }

    .time-slots {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      margin-top: 15px;
    }

    .time-slot {
      padding: 15px 20px;
      background: #c9e4f9;
      margin: 8px;
      cursor: pointer;
      border-radius: 8px;
      color: #3c8dbc;
      transition: 0.3s;
      font-weight: bold;
      font-size: 18px;
    }

    .time-slot:hover,
    .selected {
      background: #3c8dbc;
      color: white;
    }

    #confirmationMessage {
      font-weight: bold;
      font-size: 18px;
      color: #2c3e50;
      margin-top: 20px;
    }
  </style>
</head>
<body>

  <h1>Book an Appointment</h1>

  <a href="/home" class="home-btn">← Return Home</a>

  <br><br>

  <div class="container">
    <label for="appointmentDate">Select a Date:</label>
    <input type="date" id="appointmentDate" style="display: block; margin: 0 auto;" min="<%= new Date().toISOString().split('T')[0] %>">

    <label>Select a Time Slot:</label>
    <div class="time-slots" id="timeSlots">
      <!-- Time slots will be dynamically inserted here -->
    </div>

    <button onclick="bookAppointment()">Book Now</button>
  </div>

  <p id="confirmationMessage"></p>

  <script>
    let selectedTime = null;

    const timeSlots = [
      "09:00 AM", "10:00 AM", "11:00 AM", "12:00 PM",
      "01:00 PM", "02:00 PM", "03:00 PM"
    ];

    function renderTimeSlots() {
      const container = document.getElementById("timeSlots");
      container.innerHTML = "";
      timeSlots.forEach(time => {
        const div = document.createElement("div");
        div.className = "time-slot";
        div.innerText = time;
        div.onclick = function () {
          document.querySelectorAll(".time-slot").forEach(slot => slot.classList.remove("selected"));
          div.classList.add("selected");
          selectedTime = time;
        };
        container.appendChild(div);
      });
    }

    function bookAppointment() {
      const selectedDate = document.getElementById("appointmentDate").value;
      if (!selectedDate) {
        alert("Please select a date.");
        return;
      }
      if (!selectedTime) {
        alert("Please select a time slot.");
        return;
      }

      document.getElementById("confirmationMessage").innerText =
        `✅ Appointment booked for ${selectedDate} at ${selectedTime}`;
    }

    renderTimeSlots();
  </script>

</body>
</html>


